                android:src="@drawable/outline_add_a_photo_24"
                app:layout_constraintEnd_toStartOf="@+id/missing_info_photo2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textView26"
